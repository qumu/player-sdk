---
import { SdkEventMessage } from "../../src/models/internal";
import { PlayerSdk } from "../../src";

type Props = {
  checked: boolean;
  event: SdkEventMessage['name'];
  id: string;
};

const { checked, event, id }: Props = Astro.props;
---

<div className="qi-form-group">
  <div className="qi-custom-control qi-custom-checkbox">
    <input type="checkbox" className="qi-custom-control__input" id={id} data-type="event"
           data-event={event} checked={checked}/>
    <label className="qi-custom-control__label" for={id}>
      <slot/>
    </label>
  </div>
</div>
