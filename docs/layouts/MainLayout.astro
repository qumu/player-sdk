---
import Header from '../components/Header.astro';
import Sidebar from '../components/Sidebar.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;

const currentPage = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width"/>
    <title>{title}</title>
  </head>
  <body>
    <Header/>
    <div class="qi-container qi-container--fixed qi-my--6@md qi-my--3">
      <div class="qi-row">
        <aside class="qi-col qi-col--12 qi-col--4@sm qi-col--3@md">
          <Sidebar currentPage={currentPage}/>
        </aside>
        <main class="qi-col">
          <slot/>
        </main>
      </div>
    </div>
  </body>
</html>
